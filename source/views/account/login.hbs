<h1>Login</h1>

    <form action="" method="post">
      <div>
        <label>Username:</label>
        <input type="text" name="username" value="{{reqBody.username}}"/>
          <span class="jrErrorInline">{{jrResult.fields.username}}</span>
      </div>
      <div>
        <label>Password:</label>
        <input type="password" name="password"  value="{{reqBody.password}}"/>
          <span class="jrErrorInline">{{jrResult.fields.password}}</span>
      </div>
      <div>
        <input type="submit" value="Submit" />
      </div>
    </form>


