<h1>One-time Login Via-Email Request</h1>

<pre>{{message}}</pre>

    <form action="" method="post">
      <div>
        <label>Email address or username:</label>
        <input type="text" name="usernameEmail" value="{{reqBody.usernameEmail}}"/>
          <span class="jrErrorInline">{{jrResult.fields.usernameEmail}}</span>
        <br/>
      </div>
      <div>
        <input type="submit" value="Submit" />
      </div>
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    </form>
