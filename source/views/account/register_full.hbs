<h1>Complete your Account Registration</h1>

    <form action="" method="post">
      <div>
        <label>Requested Username:</label>
        <input type="text" name="username" value="{{reqbody.username}}" />
          <span class="jrErrorInline">{{jrResult.errorFields.username}}</span>
        <br/>
      </div>
      <div>
        <label>Requested Email:</label>
        <input type="text" name="email" value="{{reqbody.email}}"/>
          <span class="jrErrorInline">{{jrResult.errorFields.email}}</span>
      </div>

      <div>
        <label>Password:</label>
        <input type="password" name="password" value="{{reqbody.password}}" />
          <span class="jrErrorInline">{{jrResult.errorFields.password}}</span>
      </div>

      <input type="hidden" name="realName" value="{{reqbody.realName}}" />

      <input type="hidden" name="verificationCode" value="{{reqbody.verificationCode}}" />

      <div>
        <input type="submit" value="Submit" />
      </div>

    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    </form>



